<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="138,155,0,0" TextWrapping="Wrap" Width="100" VerticalAlignment="Top" Background="{Binding Color[0]}"/>
        <TextBlock HorizontalAlignment="Left" Margin="138,202,0,0" TextWrapping="Wrap" Width="100" VerticalAlignment="Top" Background="{Binding Color[1]}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="138,270,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
